<% if flash %>
  <% if alert %>
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <i class="glyph-icon icon-exclamation-circle"></i>&nbsp;<%= alert.to_s.html_safe %>
        </div>
      </div>
    </div>
  <% end %>

  <% if notice %>
      <div class="alert alert-info">
        <%= flash[:notice].to_s.html_safe %>
      </div>
  <% end %>
<% end %>
